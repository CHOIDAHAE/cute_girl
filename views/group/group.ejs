						if(res.Status == "S"){
                            var photo_length = res.result.length;
							if (photo_length == 0){
                                // 기본 소스
                                $('#photo_none').show();
                                $('#toge_photo_list').hide();
                            } else {
                                // 조회된 사진 배열
                                $('#toge_photo_list').show();
                                $('#photo_none').hide();

                                var content = "";

                                for (var i=0; i<photo_length; i++){
                                    content += '<li class="groupPicture">'
                                        +'<div class="item"><a><img src="..'+res.result[i][1]+'/'+res.result[i][2]
                                        +'" style="width:100%; height:100%;"></a></div></li>\n';
                                }

                                $('#toge_photo_list').html(content);      // 조회된 사진 리스트
                            }
						} else if(res.Status == "F"){
							alert('사진 조회 중 오류가 발생하였습니다.');
						}						                        
					},
					error:function(e){
						alert("사진 조회 중 오류가 발생하였습니다.(ajax에러)");
					}
				})
            };
